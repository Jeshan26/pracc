extends layout

block content
  h1 Contact us
  form.form(action="/contactDetails" method="POST")
    .forminside
      .form-group
        label(for="fstname") Enter first name
        input.form-control(type="text" name="firstname" placeholder="Enter Your first name " required) 
        label(for="fstname") Enter last name
        input.form-control(type="text" name="lastname" placeholder="Enter Your Last name " required)  
      .form-group
        label(for="Email") Email
        input.form-control(type="email" name="email" placeholder="Enter Your Email " required)
      .form-group
        label(for="message") Message
        textarea.form-control(rows="4" cols="50" name="message" placeholder="Enter Your Message " required)  
      .form-group  
      input(type="submit")
